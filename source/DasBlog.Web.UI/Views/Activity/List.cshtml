@model System.Collections.Generic.List<DasBlog.Core.EventDataDisplayItem>

@{
    ViewBag.Title = "Activity Report";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-bordered table-condensed">
                <thead>
                <tr>
                    <td class="col-md-3">
                        <strong>Time</strong>
                    </td>
                    <td>
                        <strong>Code</strong>
                    </td>
                    <td>
                        <strong>Message</strong>
                    </td>
                </tr>
                </thead>
                <tbody>
                @foreach (var eddi in Model)
                {
                    <tr>
                        <td>
                            @eddi.Date
                        </td>
                        <td>
                            @eddi.EventCode
                        </td>
                        <td>
                            @Html.Raw(eddi.HtmlMessage)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>