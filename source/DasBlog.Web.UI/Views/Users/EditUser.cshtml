@using DasBlog.Core.Common
@using DasBlog.Core.Security
@model DasBlog.Web.Models.UsersViewModel

<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Maintenance" name="editForm" id="editForm">
            @await Html.PartialAsync("UserFields", Model)
            <div class="form-group">
                <input type="submit" name="submitAction" value="@Constants.SaveAction" class="btn btn-default btn-primary"/>
                <input type="submit" name="submitAction" value="@Constants.CancelAction" class="btn cancel"/>
            </div>
        </form>
    </div>
</div>

